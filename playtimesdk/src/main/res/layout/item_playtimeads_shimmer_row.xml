<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dim_10"
    android:layout_marginRight="@dimen/dim_10"
    android:layout_marginBottom="@dimen/dim_10"
    android:background="@drawable/bg_round_rectangle_white"
    android:padding="@dimen/dim_8">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/shimmerColor"
        app:cardCornerRadius="@dimen/dim_10">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dim_50"
            android:layout_height="@dimen/dim_50"
            android:background="@color/shimmerColor" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/card"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="@dimen/dim_150"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10"
            android:background="@color/shimmerColor"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/user_status"
            android:layout_width="@dimen/dim_200"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_6"
            android:background="@color/shimmerColor"
            android:textSize="@dimen/textSize_10" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/shimmerColor"
        app:cardCornerRadius="@dimen/dim_15">

        <TextView
            android:id="@+id/points"
            android:layout_width="@dimen/dim_40"
            android:layout_height="@dimen/dim_24"
            android:layout_marginStart="@dimen/dim_10"
            android:background="@color/shimmerColor" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>