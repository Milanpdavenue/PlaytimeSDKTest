<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dim_20"
        android:background="@drawable/bg_round_rectangle_white"
        android:elevation="@dimen/dim_2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="@dimen/dim_50"
            android:padding="@dimen/dim_15"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0_5"
                android:background="@color/border_grey" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_15"
                android:layout_marginTop="@dimen/dim_15"
                android:layout_marginRight="@dimen/dim_15"
                android:layout_marginBottom="@dimen/dim_15"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="asdas asd adad asd a"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16"
                android:textStyle="normal" />

            <View
                android:id="@+id/viewSeparator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_0_5"
                android:background="@color/border_grey" />

            <android.widget.Button
                android:id="@+id/btnOk"
                android:layout_width="@dimen/dim_120"
                android:layout_height="@dimen/dim_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_15"
                android:layout_marginBottom="@dimen/dim_15"
                android:layout_weight="1"
                android:background="@drawable/bg_btn"
                android:textStyle="bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_15" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>